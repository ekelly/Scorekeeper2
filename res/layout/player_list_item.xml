<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_container_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/player_card_container_height" >

    <RelativeLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_card_height"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/card"
        android:descendantFocusability="blocksDescendants"
        android:minHeight="@dimen/player_card_height"
        android:duplicateParentState="true"
        android:padding="10dp" >

        <Button
            android:id="@+id/player_name"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:onClick="editName"
            android:text="@string/player"
            android:textColor="@color/android_blue"
            android:textSize="36sp"
            android:textStyle="italic|bold" />

        <EditText
            android:id="@+id/edit_player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#ffffff"
            android:focusableInTouchMode="true"
            android:inputType="text"
            android:minWidth="150dp"
            android:text="@string/player"
            android:textColor="@color/android_blue"
            android:textSize="36sp"
            android:textStyle="italic|bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/plus"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:onClick="onAdjustScore"
            android:padding="0dp"
            android:text="@string/plus"
            android:textColor="@color/green"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="8dp"
            android:text="@string/zero"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/minus"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/plus"
            android:layout_alignBottom="@+id/plus"
            android:layout_alignParentLeft="true"
            android:onClick="onAdjustScore"
            android:padding="0dp"
            android:text="@string/minus"
            android:textColor="@color/red"
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/confirm_edit_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignRight="@+id/plus"
            android:layout_alignTop="@+id/player_name"
            android:contentDescription="@string/edit"
            android:onClick="editName"
            android:src="@drawable/ic_action_accept"
            android:visibility="gone" />
    </RelativeLayout>

</FrameLayout>