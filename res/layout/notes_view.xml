<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notes_container"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/mode_background"
    android:onClick="onFocusChanged"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/player_detail_bidding"
        style="@style/ScorecardText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:gravity="center_horizontal"
        android:text="@string/bidding"
        android:textSize="@dimen/bidding_text_size" >
    </TextView>

    <TextView
        android:id="@+id/player_detail_bid"
        style="@style/ScorecardText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:gravity="center_horizontal" />

</LinearLayout>