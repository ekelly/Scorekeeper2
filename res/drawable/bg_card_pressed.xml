<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:dither="true"
            android:shape="rectangle" >
            
            <padding android:bottom="@dimen/player_card_margin_vertical"
                android:top="@dimen/player_card_margin_vertical"
                android:left="@dimen/player_card_margin_horizontal"
                android:right="@dimen/player_card_margin_horizontal" />
            
            <solid android:color="@color/list_background" />
        </shape>
    </item>
    <item>
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="2dp" />
            
            <padding android:bottom="2dp" />

            <solid android:color="@color/shadow" />
        </shape>
    </item>
    <item>
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="2dp" />

            <solid android:color="@color/card_pressed" />
            
        </shape>
    </item>
</layer-list>