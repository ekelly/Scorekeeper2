<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/notes_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/player_detail_bidding"
                style="@style/ScorecardText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="@string/bidding"
                android:textColor="@color/action_state_background" >
            </TextView>

            <TextView
                android:id="@+id/player_detail_bid"
                style="@style/ScorecardText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:duplicateParentState="true"
                android:textColor="@color/action_state_background"
                tools:context=".PlayerDetailFragment" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/score_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" >

            <TextView
                android:id="@+id/player_score_large"
                style="@style/ScorecardText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:gravity="center"
                android:textColor="@color/action_state_background"
                android:textSize="48sp" />

            <LinearLayout
                android:id="@+id/player_edit_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/player_detail"
                    style="@style/ScorecardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:textColor="@color/action_state_background" />

                <TextView
                    android:id="@+id/plus_minus"
                    style="@style/ScorecardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:text="@string/plus"
                    android:textColor="@color/action_state_background"
                    tools:context=".PlayerDetailFragment" />

                <TextView
                    android:id="@+id/adjust_amt"
                    style="@style/ScorecardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:textColor="@color/action_state_background"
                    tools:context=".PlayerDetailFragment" />

                <TextView
                    android:id="@+id/equals"
                    style="@style/ScorecardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:text="@string/equals"
                    android:textColor="@color/action_state_background"
                    tools:context=".PlayerDetailFragment" />

                <TextView
                    android:id="@+id/total_score"
                    style="@style/ScorecardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:textColor="@color/action_state_background"
                    tools:context=".PlayerDetailFragment" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/android_blue" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/numpad_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </FrameLayout>

</LinearLayout>