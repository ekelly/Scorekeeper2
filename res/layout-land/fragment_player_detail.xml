<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/notes_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mode_background"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/player_detail_bidding"
                style="@style/ScorecardText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/bidding" >
            </TextView>

            <TextView
                android:id="@+id/player_detail_bid"
                style="@style/ScorecardText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:gravity="center"
                tools:context=".PlayerDetailFragment" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/score_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mode_background" >

            <TextView
                android:id="@+id/player_score_large"
                style="@style/ScorecardText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:gravity="center"
                android:textSize="48sp" />

            <include layout="@layout/adjust_score_view" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/android_blue" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/numpad_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </FrameLayout>

</LinearLayout>